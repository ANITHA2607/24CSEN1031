#include <stdio.h>

int main() {
    int a, b, sum = 0;
    printf ("Enter any number to be reversed:");
    scanf("%d", &a);
    while(a>=1) {
        b = a%10;
        a = a/10;
        sum = sum*10+b;
      }
      a = sum;
      printf("\nafter reversing; %d",a);
    
    
    return 0;
}





OUTPUT

Enter any number to be reversed:123456

after reversing; 654321
